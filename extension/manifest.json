{
  "manifest_version": 2,
  "name": "Memrise Audio Uploader",
  "author": "cardinalby",
  "description": "Uploads audio for words in your course",
  "version": "1.2.8",
  "icons": {
    "128": "images/mainIcon128.png"
  },
  "background": {
    "scripts": [
      "compatibility.js",
      "jquery-3.6.0.min.js",
      "messages.js",
      "soundOfText/soundOfText.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "compatibility.js",
      "jquery-3.6.0.min.js",
      "memrise/memriseCourse.js",
      "memrise/memriseCourseWordRow.js",
      "messages.js",
      "uploadManager.js",
      "soundOfText/languages.js",
      "autoUploadBtn.js"
    ],
    "matches": [
      "https://app.memrise.com/course/*/edit/*"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "pageInjectedScript.js"
  ],
  "permissions": [
    "https://app.memrise.com/*",
    "https://api.soundoftext.com/*",
    "https://storage.soundoftext.com/*"
  ]
}